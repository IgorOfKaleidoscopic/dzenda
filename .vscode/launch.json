{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "ng serve",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: start"
    },
    {
      "name": "ng test",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: test"
    },
    {
      "type": "msedge",
      "name": "Launch Edge",
      "request": "launch",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "url": "http://localhost:4200",
      "presentation": {
        "hidden": false
      }
    },
    {
      "type": "msedge",
      "name": "Launch Edge headless",
      "request": "launch",
      "runtimeArgs": [
        "--headless",
        "--remote-debugging-port=9222"
      ],
      "url": "http://localhost:4200",
      "presentation": {
        "hidden": false
      }
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Attach DevTools",
      "request": "attach",
      "url": "http://localhost:4200",
      "presentation": {
        "hidden": false
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Edge with DevTools",
      "configurations": [
        "Launch Edge",
        "Attach DevTools"
      ]
    },
    {
      "name": "Launch Edge headless with DevTools",
      "configurations": [
        "Launch Edge headless",
        "Attach DevTools"
      ]
    }
  ]
}
